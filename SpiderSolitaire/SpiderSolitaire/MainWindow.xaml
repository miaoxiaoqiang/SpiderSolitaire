<Window x:Class="SpiderSolitaire.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpiderSolitaire"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ic="clr-namespace:MvvmLight.Command;assembly=MvvmLight"
        xmlns:customcomponent="clr-namespace:SpiderSolitaire.Components"
        xmlns:customattachedproperty="clr-namespace:SpiderSolitaire.AttachedProperty"
        xmlns:customconverter="clr-namespace:SpiderSolitaire.Converters"
        xmlns:custommodel="clr-namespace:SpiderSolitaire.Model"
        xmlns:gif="clr-namespace:WpfAnimatedGif;assembly=WPFGifPlay"
        xmlns:custombehavior="clr-namespace:SpiderSolitaire.Behaviors"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Title="蜘蛛纸牌"
        Height="1000" Width="1400"
        FontFamily="{StaticResource UIFont}">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Height" Value="21"/>
            <Setter Property="Padding" Value="5, 0, 2, 0"/>
            <Setter Property="Margin" Value="4, 0, 0, 0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border x:Name="border"
                                BorderBrush="#999"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsEnabled" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <!--<Setter TargetName="border" Property="BorderThickness" Value="1"/>-->
                                <Setter Property="Foreground" Value="#FFAF1F1F"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#FF817B7B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="menuradion" TargetType="RadioButton">
                <Setter Property="IsChecked" Value="False" />
                <Setter Property="Background" Value="White" />
                <Setter Property="Foreground" Value="#555" />
                <Setter Property="FontFamily" Value="{StaticResource UIFont}"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="customattachedproperty:AttachedProperties.ImageResourceKey" Value="{x:Null}"/>
                <Setter Property="customattachedproperty:AttachedProperties.ScaleHeight" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="21"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Viewbox VerticalAlignment="Center"
                                         FlowDirection="LeftToRight"
                                         Width="16" Height="16"
                                         Margin="0. -5, 0, 0"
                                         x:Name="viewbox"
                                         Visibility="Collapsed"
                                         Grid.Column="0">
                                    <Path Fill="{TemplateBinding Foreground}"
                                          Data="M422.36247 839.786465c-13.320377 13.421684-34.909068 13.421684-48.126091 0l-10.69355-10.800997 0 0-11.398608-11.502985-50.145074-50.544163c-0.097214-0.201591 0-0.500397-0.201591-0.604774L72.380494 533.085224c-13.320377-13.421684-13.320377-35.218106 0-48.535413l72.132854-72.842005c13.319353-13.408381 34.907021-13.408381 48.224328 0l205.814506 209.252815L831.363631 184.208419c13.218046-13.414521 34.806737-13.414521 48.124044 0l72.134901 72.842005c13.317307 13.408381 13.317307 35.113729 0 48.52211L422.36247 839.786465 422.36247 839.786465z"/>
                                </Viewbox>
                            <TextBlock DockPanel.Dock="Left"
                                       Cursor="Hand"
                                       x:Name="textblock"
                                       VerticalAlignment="Center"
                                       Margin="2, 0, 3, 0"
                                       Foreground="{TemplateBinding Foreground}"
                                       Text="{TemplateBinding Content}" 
                                       Grid.Column="1">
                                <i:Interaction.Behaviors>
                                    <custombehavior:PopupBehavior/>
                                </i:Interaction.Behaviors>
                            </TextBlock>
                                <Image Grid.Column="2"
                                       Width="auto"
                                       Source="{TemplateBinding customattachedproperty:AttachedProperties.ImageResourceKey, Converter={x:Static customconverter:ImageResourceKeyToImageConverter.Instance}}"
                                       SnapsToDevicePixels="True" UseLayoutRounding="True" RenderOptions.BitmapScalingMode="HighQuality"
                                       Height="{TemplateBinding customattachedproperty:AttachedProperties.ScaleHeight}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Stretch="Uniform"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="true">
                                    <Setter TargetName="viewbox" Property="Visibility" Value="Visible"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        <Style x:Key="GroupBoxStyle" TargetType="{x:Type GroupBox}">
            <Setter Property="FontFamily" Value="{StaticResource UIFont}"/>
            <Setter Property="BorderBrush" Value="#D5DFE5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupBox}">
                        <Grid SnapsToDevicePixels="true">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="1"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="1"/>
                            </Grid.RowDefinitions>
                            <Border BorderBrush="Black"
                                    RenderTransformOrigin="0.5,0.5"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Grid.ColumnSpan="4" Grid.Row="1" Grid.RowSpan="3"/>
                            <Border x:Name="Header" Grid.Column="1"
                                    Background="#F0F0F0"
                                    HorizontalAlignment="Center"
                                    Padding="3,1,3,1"
                                    Grid.Row="0" Grid.RowSpan="2" Margin="20,2,0,0">
                                <ContentPresenter ContentSource="Header"
                                                  RecognizesAccessKey="True"
                                                  TextBlock.FontSize="13"
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            </Border>
                            <ContentPresenter Grid.ColumnSpan="2" Grid.Column="1"
                                              Margin="{TemplateBinding Padding}"
                                              Grid.Row="2"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="recordRadio" TargetType="RadioButton">
            <Setter Property="IsChecked" Value="False" />
            <Setter Property="Background" Value="#F0F0F0" />
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="{StaticResource UIFont}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="21"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="✔" Visibility="Hidden"
                                       Grid.Column="0" FontSize="{TemplateBinding FontSize}"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                                       x:Name="checkpart" Margin="0,0,0,5"/>
                            <TextBlock Text="{TemplateBinding Content}" Cursor="Hand"
                                       Grid.Column="1" FontSize="{TemplateBinding FontSize}"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter TargetName="checkpart" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                BorderThickness="0.5" BorderBrush="Black"
                                Background="{StaticResource buttonnohover}"
                                CornerRadius="3">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Text="{TemplateBinding Content}" FontSize="{TemplateBinding FontSize}"
                                       Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3C7FB1"/>
                                <Setter TargetName="border" Property="Background" Value="{StaticResource buttonhover}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Source="/Resources/Images/background.jpg"
               Height="1000" Width="1400"
               RenderOptions.BitmapScalingMode="HighQuality" UseLayoutRounding="True" SnapsToDevicePixels="True"
               Stretch="UniformToFill"
               Grid.Row="0" Grid.RowSpan="2"/>
        <Grid Grid.Row="0">
            <Grid.Background>
                <ImageBrush ImageSource="/Resources/Images/menubcg.png"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <customcomponent:LabelCommandDecorator Command="{Binding NewGameCommand, Mode=OneWay}" Grid.Column="0">
                <Label Content="新游戏" />
            </customcomponent:LabelCommandDecorator>
            <customcomponent:LabelCommandDecorator Command="{Binding DrawBackCommand, Mode=OneWay}" Grid.Column="1">
                <Label Content="撤销" />
            </customcomponent:LabelCommandDecorator>
            <Label Content="难度"
                   x:Name="OptionsSelect"
                   Grid.Column="2"/>
            <Label Content="统计信息"
                   Grid.Column="3"
                   x:Name="Record"/>
            <Label Content="语言"
                   x:Name="LanguageSelect"
                   Grid.Column="4"/>
            <Label Content="帮助"
                   Grid.Column="5"
                   x:Name="About"/>
            <Label Content="时间:" Style="{x:Null}" Padding="5, 0, 2, 0"
                   Grid.Column="6" VerticalContentAlignment="Center"
                   FontSize="14"
                   Margin="200, 0, 0, 0"/>
            <Label Content="{Binding Duration, Mode=OneWay, Converter={x:Static customconverter:SecondsToTimeConverter.Instance}}"
                   Grid.Column="7" Style="{x:Null}"
                   FontSize="14" VerticalContentAlignment="Center"
                   Padding="5, 0, 2, 0"/>
            <Label Content="得分:" Style="{x:Null}" Padding="5, 0, 2, 0"
                   Grid.Column="8" VerticalContentAlignment="Center"
                   FontSize="14"/>
            <Label Content="{Binding Scores,Mode=OneWay}" Padding="5, 0, 2, 0"
                   Grid.Column="9" Style="{x:Null}"
                   FontSize="14" VerticalContentAlignment="Center"/>
            <Label Content="步数:" Style="{x:Null}" Padding="5, 0, 2, 0"
                   Grid.Column="10" VerticalContentAlignment="Center"
                   FontSize="14"/>
            <Label Content="{Binding Steps,Mode=OneWay}" Padding="5, 0, 2, 0"
                   Grid.Column="11" Style="{x:Null}"
                   FontSize="14" VerticalContentAlignment="Center"/>

            <Popup x:Name="menuPop1" Grid.ColumnSpan="13" Grid.Column="0"
                   StaysOpen="False"
                   Margin="0"
                   Width="auto"
                   PlacementTarget="{Binding ElementName=OptionsSelect}"
                   AllowsTransparency="True">
                <Grid>
                    <Border BorderThickness="0" CornerRadius="5" Background="White" Margin="3">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="#FFB6B6B6" BlurRadius="3"/>
                        </Border.Effect>
                    </Border>
                    <Grid Margin="5,3,10,3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <RadioButton Content="单色" Grid.Row="0"
                                     Style="{StaticResource menuradion}"
                                     Height="25"
                                     ToolTip="选择此项将随机选择一种花色"
                                     customattachedproperty:AttachedProperties.ImageResourceKey="OneSuit"
                                     customattachedproperty:AttachedProperties.ScaleHeight="14"
                                     IsChecked="{Binding Level, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={x:Static customconverter:LevelToCheckConverter.Instance}, ConverterParameter={x:Static custommodel:GameLevel.OneSuit}}"
                                     GroupName="GroupLevelType"/>
                        <RadioButton Content="双色" Grid.Row="1"
                                     Style="{StaticResource menuradion}"
                                     Height="25"
                                     ToolTip="选择此项将随机选择两种不同的花色（颜色不同）"
                                     customattachedproperty:AttachedProperties.ImageResourceKey="TwoSuits"
                                     customattachedproperty:AttachedProperties.ScaleHeight="14"
                                     GroupName="GroupLevelType"
                                     IsChecked="{Binding Level, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={x:Static customconverter:LevelToCheckConverter.Instance}, ConverterParameter={x:Static custommodel:GameLevel.TwoSuit}}"/>
                        <RadioButton Content="四色" Grid.Row="2"
                                     Style="{StaticResource menuradion}"
                                     Height="25"
                                     customattachedproperty:AttachedProperties.ImageResourceKey="FourSuits"
                                     customattachedproperty:AttachedProperties.ScaleHeight="14"
                                     GroupName="GroupLevelType"
                                     IsChecked="{Binding Level, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={x:Static customconverter:LevelToCheckConverter.Instance}, ConverterParameter={x:Static custommodel:GameLevel.FourSuit}}"/>
                    </Grid>
                </Grid>
                
            </Popup>
            <Popup x:Name="menuPop2" Grid.ColumnSpan="13" Grid.Column="0"
                   StaysOpen="False"
                   Margin="0"
                   PlacementTarget="{Binding ElementName=LanguageSelect}"
                   AllowsTransparency="True">
                <Grid>
                    <Border BorderThickness="0" CornerRadius="5" Background="White" Margin="3">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="#FFB6B6B6" BlurRadius="3"/>
                        </Border.Effect>
                    </Border>
                    <Grid Margin="5,3,10,3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <RadioButton Content="简体中文" Grid.Row="0"
                                     Style="{StaticResource menuradion}"
                                     Height="25"
                                     GroupName="GroupLanguageType"
                                     customattachedproperty:AttachedProperties.ImageResourceKey="ZH_CN"
                                     customattachedproperty:AttachedProperties.ScaleHeight="21"/>
                        <RadioButton Content="繁體中文" Grid.Row="1"
                                     Style="{StaticResource menuradion}"
                                     Height="25"
                                     GroupName="GroupLanguageType"
                                     customattachedproperty:AttachedProperties.ImageResourceKey="ZH_CN"
                                     customattachedproperty:AttachedProperties.ScaleHeight="21"/>
                        <RadioButton Content="English" Grid.Row="2"
                                     Height="25"
                                     Style="{StaticResource menuradion}"
                                     GroupName="GroupLanguageType"
                                     customattachedproperty:AttachedProperties.ImageResourceKey="US"
                                     customattachedproperty:AttachedProperties.ScaleHeight="21"/>
                    </Grid>
                </Grid>
            </Popup>
        </Grid>
        <Viewbox Stretch="Fill" Grid.Row="1">
            <Canvas SnapsToDevicePixels="True" UseLayoutRounding="True" RenderOptions.BitmapScalingMode="HighQuality"
                    Height="1000" Width="1400">
                <!--这是基础牌位置-->
                <Image Source="{StaticResource BaseFoundation}"
                       Canvas.Top="10" Canvas.Left="294"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
                <Image Source="{StaticResource BaseFoundation}"
                       Canvas.Top="10" Canvas.Left="431"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
                <Image Source="{StaticResource BaseFoundation}"
                       Canvas.Top="10" Canvas.Left="568"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
                <Image Source="{StaticResource BaseFoundation}"
                       Canvas.Top="10" Canvas.Left="705"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
                <Image Source="{StaticResource BaseFoundation}"
                       Canvas.Top="10" Canvas.Left="842"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
                <Image Source="{StaticResource BaseFoundation}"
                       Canvas.Top="10" Canvas.Left="979"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
                <Image Source="{StaticResource BaseFoundation}"
                       Canvas.Top="10" Canvas.Left="1116"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
                <Image Source="{StaticResource BaseFoundation}"
                       Canvas.Top="10" Canvas.Left="1253"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>

                <!--这是游戏区位置-->
                <Image Source="{StaticResource Base}"
                       Canvas.Top="185" Canvas.Left="20"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
                <Image Source="{StaticResource Base}"
                       Canvas.Top="185" Canvas.Left="157"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
                <Image Source="{StaticResource Base}"
                       Canvas.Top="185" Canvas.Left="294"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
                <Image Source="{StaticResource Base}"
                       Canvas.Top="185" Canvas.Left="431"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
                <Image Source="{StaticResource Base}"
                       Canvas.Top="185" Canvas.Left="568"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
                <Image Source="{StaticResource Base}"
                       Canvas.Top="185" Canvas.Left="705"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
                <Image Source="{StaticResource Base}"
                       Canvas.Top="185" Canvas.Left="842"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
                <Image Source="{StaticResource Base}"
                       Canvas.Top="185" Canvas.Left="979"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
                <Image Source="{StaticResource Base}"
                       Canvas.Top="185" Canvas.Left="1116"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
                <Image Source="{StaticResource Base}"
                       Canvas.Top="185" Canvas.Left="1253"
                       Width="117" Height="164"
                       Stretch="Uniform" StretchDirection="Both"/>
            </Canvas>
        </Viewbox>
        <Viewbox Stretch="Fill" Grid.Row="1">
            <customcomponent:CardItemsControl ItemsSource="{Binding Cards, Mode=OneWay}"
                                              Visibility="{Binding Path=DataContext.Start, Mode=OneWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}">
                <customcomponent:CardItemsControl.Style>
                    <Style TargetType="customcomponent:CardItemsControl">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="customcomponent:CardItemsControl">
                                    <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="ItemsPanel">
                            <Setter.Value>
                                <ItemsPanelTemplate>
                                    <Canvas SnapsToDevicePixels="True" UseLayoutRounding="True" RenderOptions.BitmapScalingMode="HighQuality"
                                            Background="Transparent"
                                            Height="1000" Width="1400"
                                            IsItemsHost="True"/>
                                </ItemsPanelTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="ItemTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <customcomponent:CardControl />
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </customcomponent:CardItemsControl.Style>
            </customcomponent:CardItemsControl>
        </Viewbox>
        <Border Background="Transparent"
                Visibility="{Binding ShowWin, Mode=OneWay, Converter={x:Static customconverter:ShowWinConverter.Instance}}"
                Grid.Row="0" Grid.RowSpan="2">
            <Image gif:ImageBehavior.AnimatedSource="/Resources/Images/win.gif"
                   Height="200" Width="200" />
        </Border>
        <Image Source="/Resources/Images/AddScore.png" 
               Grid.Row="1"
               Margin="0, 0, 0, 0"
               Width="167" Height="82"
               SnapsToDevicePixels="True" UseLayoutRounding="True" RenderOptions.BitmapScalingMode="HighQuality">
            <Image.Style>
                <Style TargetType="Image">
                    <Setter Property="Opacity" Value="0"/>
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowScore, Mode=OneWay}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                            <DataTrigger.EnterActions>
                                <RemoveStoryboard BeginStoryboardName="showscore"/>
                                <BeginStoryboard x:Name="showscore">
                                    <Storyboard Duration="00:00:01.2000">
                                        <ThicknessAnimation To="0, -100, 0, 0"
                                                            Duration="00:00:01.2000"
                                                            Storyboard.TargetProperty="(FrameworkElement.Margin)"
                                                            FillBehavior="Stop"/>
                                        <DoubleAnimationUsingKeyFrames Duration="00:00:01.2000"
                                                                       FillBehavior="Stop"
                                                                       Storyboard.TargetProperty="(UIElement.Opacity)">
                                            <DiscreteDoubleKeyFrame KeyTime="00:00:00.0001" Value="1"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimation Duration="00:00:01.2000"
                                                         BeginTime="00:00:00.0002"
                                                         To="0"
                                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                                         FillBehavior="Stop"/>
                                        <ObjectAnimationUsingKeyFrames Duration="00:00:01.2000"
                                                                       FillBehavior="Stop"
                                                                       Storyboard.TargetProperty="(UIElement.Visibility)">
                                            <DiscreteObjectKeyFrame KeyTime="00:00:01.2000"
                                                                    Value="{x:Static Visibility.Collapsed}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Border Grid.Row="0" Grid.RowSpan="2"
                BorderThickness="0"
                x:Name="ExtraBorder"
                Background="#66000000">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding InitGame, Mode=OneWay}" Value="{x:Static sys:Boolean.TrueString}">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Setter Property="Background" Value="#66000000" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>
        <Label Grid.Row="1" Panel.ZIndex="12">
            <Label.Style>
                <Style TargetType="Label">
                    <Setter Property="FontFamily" Value="{StaticResource UIFont}"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Margin" Value="0, 110, 0, 0"/>
                    <Setter Property="Content" Value="发牌中..."/>
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding InitGame, Mode=OneWay}" Value="{x:Static sys:Boolean.TrueString}">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>
        <Canvas ClipToBounds="True"
                Panel.ZIndex="11"
                Grid.Row="1"
                Width="87" Height="87"
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="/Resources/Images/cssloading.png" Stretch="Uniform"
                   Canvas.Left="0" Canvas.Top="0" 
                   SnapsToDevicePixels="True" UseLayoutRounding="True" RenderOptions.BitmapScalingMode="HighQuality">
                <Image.Style>
                    <Style TargetType="Image">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding InitGame, Mode=OneWay}" Value="{x:Static sys:Boolean.TrueString}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <DataTrigger.EnterActions>
